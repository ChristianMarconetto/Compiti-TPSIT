<body>
  <h1><em>MAGGIORE TRA TRE NUMERI:</em></h1>
  <div id="container">
    <label for="primoNumero">Inserisci il PRIMO numero</label><br />
    <input id="primoNumero" type="text" /> <br />
    <label for="primoNumero">Inserisci il SECONDO numero</label><br />
    <input id="secondoNumero" type="text" /><br />
    <label for="primoNumero">Inserisci il TERZO numero</label><br />
    <input id="terzoNumero" type="text" /><br />
    <p id="numeroMaggiore"></p>
    <p id="numero"></p>
    <button onclick="trovaMaggiore()">Calcola</button>
  </div>
  <script>
    function trovaMaggiore() {
      var a, b, c;
      a = document.getElementById("primoNumero").value;
      b = document.getElementById("secondoNumero").value;
      c = document.getElementById("terzoNumero").value;
      var nMaggiore = 0;

      if (a == b && b == c) {
        nMaggiore = "E' inutile che metti 3 numeri uguali";
      } else {
        if (a > b) {
          nMaggiore = a;
        } else {
          nMaggiore = b;
        }
        if (nMaggiore > c) {
        } else {
          nMaggiore = c;
        }
      }
      if (nMaggiore=a){
        document.getElementById("numeroMaggiore").innerHTML = "Il numero maggiore è il primo"+"("+nMaggiore+")";
      }
      if (nMaggiore=b){
        document.getElementById("numeroMaggiore").innerHTML = "Il numero maggiore è il secondo"+"("+nMaggiore+")";
      }
      if (nMaggiore=c){
        document.getElementById("numeroMaggiore").innerHTML = "Il numero maggiore è il terzo"+"("+nMaggiore+")";
      }
    }
  </script>
